@model IEnumerable<newAdmin.Models.Pai>

@{
    ViewData["Title"] = "Pais";
}

<h1>Pais</h1>
<style>
    body {
        background-color: background: #67B26F; /* fallback for old browsers */
        background: -webkit-linear-gradient(to bottom, #4ca2cd, #67B26F); /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to bottom, #4ca2cd, #67B26F); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        ;
    }
</style>
    <p>
        <a asp-action="Create">Crear Pais </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th> Acciones </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CodePais">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CodePais">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CodePais">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
